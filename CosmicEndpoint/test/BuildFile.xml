<library name="HistogramMaker" file="HistogramMaker.cc">
  <use   name="boost"/>
  <use   name="boost_program_options"/>
  <use   name="root"/>
  <use   name="rootmath"/>
  <use   name="rootgraphics"/>
  <use   name="DataFormats/Math"/>
  <flags CXXFLAGS="-std=gnu++1y -O0 -g3 -fno-inline -Wall -pedantic"/>
  <flags CFLAGS="-std=gnu++1y -O0 -g3 -fno-inline -Wall -pedantic"/>
</library>

<bin name="runEndpoint" file="runEndpoint.cc">
  <lib   name="HistogramMaker"/>
  <use   name="boost"/>
  <use   name="boost_program_options"/>
  <use   name="root"/>
  <use   name="rootmath"/>
  <use   name="rootgraphics"/>
  <use   name="DataFormats/Math"/>
  <flags CXXFLAGS="-std=gnu++1y -O0 -g3 -fno-inline -Wall -pedantic"/>
  <flags CFLAGS="-std=gnu++1y -O0 -g3 -fno-inline -Wall -pedantic"/>
</bin>
